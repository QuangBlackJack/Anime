<div style="margin-left: 10px; float: left">
    <div class="container" style="width: 700px; float: left">
        <table class="table">
            <thead class="thead-dark bg-dark text-light">
                <tr>
                    <th scope="col">number</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="bg-light">
                {{#each Cart}}
                <form method="get" action="/cart/delete/{{_id}}">
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td><img width="100px" height="100px" src="{{this.image}}" alt=""></td>
                        <td>{{this.name}}</td>
                        <td>{{this.price}}</td>
                        <td><a class="nav-link text-muted"></a></td>
                        <td><a class="nav-link text-muted"> <button type="submit">Delete</button></a></td>
                        {{!-- <button type="submit">Delete</button> --}}
                    </tr>
                </form>
                {{/each}}
